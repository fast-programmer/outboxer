#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "outboxer"
require "outboxer/sweeper"

cli_options = Outboxer::Sweeper.parse_cli_options(ARGV)
environment = cli_options.delete(:environment) ||
              ENV["APP_ENV"] || ENV["RAILS_ENV"] || "development"
options = Outboxer::Sweeper::SWEEP_DEFAULTS.merge(cli_options)
logger = Outboxer::Logger.new($stdout, level: Outboxer::Logger::INFO)

database_config = Outboxer::Database.config(environment: environment, pool: options[:concurrency])

Outboxer::Database.connect(config: database_config, logger: logger)

begin
  Outboxer::Sweeper.sweep(
    retention_seconds: options[:retention_seconds],
    batch_size: options[:batch_size],
    concurrency: options[:concurrency],
    logger: logger)
ensure
  Outboxer::Database.disconnect(logger: logger)
end
