<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Messages</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Order</th>
                            <th scope="col">Id</th>
                            <th scope="col">Messageable</th>
                            <th scope="col">Created At</th>
                            <th scope="col">
                                Updated At <i class="bi bi-sort-up"></i>
                            </th>
                        </tr>
                    </thead>

                    <!-- Publishing Section -->
                    <tbody>
                        <tr class="table-primary" data-bs-toggle="collapse" data-bs-target="#publishingSection" aria-expanded="true" aria-controls="publishingSection">
                            <th colspan="7">
                                Publishing (<%= message_status_counts['publishing'] %>)
                            </th>
                        </tr>
                    </tbody>
                    <tbody id="publishingSection" class="collapse show table-group-divider">
                        <% messages_publishing['data'].each_with_index do |message, index| %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>
                                    <a href="/message/<%= message['id'] %>" class="custom-link">
                                        <%= message['id'] %>
                                    </a>
                                </td>
                                <td><%= message['messageable'] %></td>
                                <td><%= message['created_at'] %></td>
                                <td><%= message['updated_at'] %></td>
                            </tr>
                        <% end %>
                    </tbody>

                    <!-- Unpublishing Section -->
                    <tbody>
                        <tr class="table-secondary" data-bs-toggle="collapse" data-bs-target="#unpublishedSection" aria-expanded="true" aria-controls="unpublishedSection">
                            <th colspan="7">
                                Unpublished (<%= message_status_counts['unpublished'] %>)
                            </th>
                        </tr>
                    </tbody>
                    <tbody id="unpublishedSection" class="collapse show table-group-divider">
                        <% messages_unpublished['data'].each_with_index do |message, index| %>
                            <tr>
                                <td><%= messages_publishing['data'].count + index + 1 %></td>
                                <td>
                                    <a href="/message/<%= message['id'] %>" class="custom-link">
                                        <%= message['id'] %>
                                    </a>
                                </td>
                                <td><%= message['messageable'] %></td>
                                <td><%= message['created_at'] %></td>
                                <td><%= message['updated_at'] %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
