<div class="container my-4">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Message <%= message['id'] %></h3>
            <div class="card-header-buttons">
                <!-- Republish Link -->
                <a href="/message/<%= message['id'] %>/republish" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Republish
                </a>

                <!-- Delete Link -->
                <a href="/message/<%= message['id'] %>/delete" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this message?');">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Messageable</th>
                        <td><%= message['messageable'] %></td>
                    </tr>
                    <tr>
                        <th scope="row">Status</th>
                        <td><%= message['status'] %></td>
                    </tr>
                    <tr>
                        <th scope="row">Created at</th>
                        <td><%= message['created_at'] %></td>
                    </tr>
                    <tr>
                        <th scope="row">Updated at</th>
                        <td><%= message['updated_at'] %></td>
                    </tr>
                </tbody>
            </table>

            <div class="accordion" id="exceptionsAccordion">
            <% message['exceptions'].each do |exception| %>
                <!-- Last Exception -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="exceptionHeader1">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#exceptionCollapse1" aria-expanded="false" aria-controls="exceptionCollapse1">
                            <div class="custom-header-content w-100">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    <span class="ms-2"><%= exception['id'] %>: <%= exception['class_name'] %> - <%= exception['message_text'] %></span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-calendar3"></i>
                                    <small class="text-muted ms-2" style="font-size: 0.75em;"><%= exception['created_at'] %></small>
                                </div>
                            </div>
                        </button>
                    </h2>
                    <div id="exceptionCollapse1" class="accordion-collapse collapse" aria-labelledby="exceptionHeader1">
                        <div class="accordion-body">
                            <ul class="list-group list-group-flush">

                                <% exception['frames'].each do |frame| %>
                                <li class="list-group-item"><%= frame['id'] %>: <%= frame['text'] %></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% end %>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
