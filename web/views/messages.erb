<div class="container mt-4">
    <!-- Card to wrap the table and its controls -->
    <div class="card">
        <div class="card-header">
            <!-- Controls Row -->
            <div class="container-fluid">
                <div class="row justify-content-between align-items-center"> <!-- Use 'justify-content-between' to push content to the sides -->
                    <!-- Title aligned to left -->
                    <div class="col">
                        <h3 class="mb-0">Messages</h3>
                    </div>

                    <!-- Buttons aligned to right -->
                    <div class="col d-flex justify-content-end"> <!-- Adjust alignment to end -->
                        <form id="republishAllForm" action="/messages/republish_all" method="post" class="me-2">
                            <input type="hidden" name="action" value="republishAll">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Republish All
                            </button>
                        </form>
                        <form id="deleteAllForm" action="/messages/delete_all" method="post">
                            <input type="hidden" name="action" value="deleteAll">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete All
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bulk Actions Form -->
        <form id="bulkActionForm" action="/messages/update" method="post">
            <div class="card-toolbar py-2 d-none" id="bulkActionsToolbar" style="border-top: 1px solid #eee; border-bottom: 1px solid #eee; background-color: #E9F5FB;">
                <div class="container">
                    <div class="row justify-content-start">
                        <div class="col-auto">
                            <!-- Republish Selected Button -->
                            <button class="btn btn-sm btn-outline-secondary me-2" type="submit" name="action" value="republishSelected" data-bs-toggle="tooltip" data-bs-placement="top" title="Republish selected">
                                <i class="bi bi-arrow-clockwise"></i> Republish Selected
                            </button>
                            <!-- Delete Selected Button -->
                            <button class="btn btn-sm btn-outline-danger" type="submit" name="action" value="deleteSelected" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete selected">
                                <i class="bi bi-trash"></i> Delete Selected
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="card-body">

            <div class="table-responsive">
                <!-- Table -->
                <table class="table table-hover">
                    <thead>
                        <th scope="col">
        <input type="checkbox" id="checkAll">
      </th>
      <th scope="col">
        <a href="/messages?sort=id&order=<%= 'id' == sort ? (order == 'asc' ? 'desc' : 'asc') : 'asc' %>" 
           class="<%= 'id' == sort ? 'text-primary' : '' %>">
          Id <i class="bi bi-sort-alpha-down-up"></i>
        </a>
      </th>
      <th scope="col">
        <a href="/messages?sort=status&order=<%= 'status' == sort ? (order == 'asc' ? 'desc' : 'asc') : 'asc' %>"
           class="<%= 'status' == sort ? 'text-primary' : '' %>">
          Status <i class="bi bi-sort-alpha-down-up"></i>
        </a>
      </th>
      <th scope="col">
        <a href="/messages?sort=messageable&order=<%= 'messageable' == sort ? (order == 'asc' ? 'desc' : 'asc') : 'asc' %>"
           class="<%= 'messageable' == sort ? 'text-primary' : '' %>">
          Messageable <i class="bi bi-sort-alpha-down-up"></i>
        </a>
      </th>
      <th scope="col">
        <a href="/messages?sort=created_at&order=<%= 'created_at' == sort ? (order == 'asc' ? 'desc' : 'asc') : 'asc' %>"
           class="<%= 'created_at' == sort ? 'text-primary' : '' %>">
          Created At <i class="bi bi-sort-alpha-down-up"></i>
        </a>
      </th>
      <th scope="col">
        <a href="/messages?sort=updated_at&order=<%= 'updated_at' == sort ? (order == 'asc' ? 'desc' : 'asc') : 'asc' %>"
           class="<%= 'updated_at' == sort ? 'text-primary' : '' %>">
          Updated At <i class="bi bi-sort-alpha-down-up"></i>
        </a>
      </th>
</tr>
                    </thead>
                    <tbody>
                        <% messages[:data].each do |message| %>
                            <tr>
                                <td><input type="checkbox" class="individual-check" form="bulkActionForm" name="selectedMessages[]" value="<%= message[:id] %>"></td>
                                <th scope="row">
                                    <a href="/message/<%= message[:id] %>" class="custom-link">
                                    <%= message[:id] %>
                                    </a>
                                </th>
                                <td><%= message[:status] %></td>
                                <td><%= message[:messageable_type] %>::<%= message[:messageable_id] %></td>
                                <td><%= message[:created_at] %></td>
                                <td><%= message[:updated_at] %></td>
                                <td>
                                    <!-- Action buttons -->
                                    <div class="d-flex">
                                    <!-- Republish Button Form -->
                                    <form action="/message/<%= message[:id] %>/republish" method="post">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary me-1 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-arrow-clockwise me-1"></i>
                                        <span>Republish</span>
                                        </button>
                                    </form>

                                    <!-- Delete Button Form -->
                                    <form action="/message/<%= message[:id] %>/delete" method="post">
                                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-trash me-1"></i>
                                        <span>Delete</span>
                                        </button>
                                    </form>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <!-- Navigation now takes up full width on xs to sm, then 2/3 on md and larger screens -->
                    <div class="col-12 col-md-8 mb-2 mb-md-0">
                        <div class="d-flex justify-content-center">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination mb-0">
                                    <% if messages[:current_page] > 1 %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= messages[:current_page] - 1 %>&per_page=<%= per_page %>">Previous</a>
                                        </li>
                                    <% end %>

                                    <% 1.upto(messages[:total_pages]) do |current_page| %>
                                        <li class="page-item <%= 'active' if current_page == page %>">
                                            <a class="page-link" href="?page=<%= current_page %>&per_page=<%= per_page %>"><%= current_page %></a>
                                        </li>
                                    <% end %>

                                    <% if messages[:current_page] < messages[:total_pages] %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= messages[:current_page] + 1 %>&per_page=<%= per_page %>">Next</a>
                                        </li>
                                    <% end %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <!-- "Per page" selection now right-aligned and takes up 1/3 on md and larger screens -->
                    <form action="/messages/per_page" method="post" id="perPageForm">
                    <div class="col-12 col-md-4 d-flex justify-content-end justify-content-md-end">
                        <div class="d-flex align-items-center">
                            <label for="perPageSelect" class="me-2">Per&nbsp;page:</label>
                            <select class="form-select form-select-sm" aria-label="Per page" id="perPageSelect" name="per_page" onchange="document.getElementById('perPageForm').submit();">
                                <option value="10" <%= 'selected' if per_page.to_i == 10 %>>10</option>
                                <option value="100" <%= 'selected' if per_page.to_i == 100 %>>100</option>
                                <option value="200" <%= 'selected' if per_page.to_i == 200 %>>200</option>
                                <option value="500" <%= 'selected' if per_page.to_i == 500 %>>500</option>
                                <option value="1000" <%= 'selected' if per_page.to_i == 1000 %>>1000</option>
                            </select>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
